<h1>CREATE NEW OFFER</h1>

<%= form_for(@offer) do |f| %>
    <%= f.label :advertiser_name%><br>
    <%= f.text_field :advertiser_name%><br>
    <br><%= f.label :url%><br>
    <%= f.text_area :url%><br>
    <br><%= f.label :description%><br>
    <%= f.text_area :description%><br>
    <br><%= f.label :active_from%><br>
    <%= f.date_select :active_from, as: :date, value: f.object.try(:strftime,"%d/%m/%Y"), class: 'form-control' %>
    <br><%= f.label :active_until%><br>
    <%= f.date_select :active_until, as: :date, value: f.object.try(:strftime,"%d/%m/%Y"), class: 'form-control' %>
    <br><%= f.label "Premium" %> <br />
    <%= f.check_box :premium %> <br />

    <br><%= f.submit %>
<% end %>
